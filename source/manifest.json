{
  "manifest_version": 2,
  "name": "Natural language colorer",
  "short_name": "Nalacol",
  "version": "0.2",
  
  "icons": {
    "128": "icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [ "*://*/*" ],
      "js": [ "content.js" ]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "storage", "tabs"
  ],
      "browser_action": {
        "default_title": "LanguageColorer",
        "default_icon": "icon_128.png",
        "default_popup": "popup.html"
    }
    
}